{
  "name": "tw-helper",
  "version": "0.0.1",
  "description": "A CLI tool providing useful helper functions for developers using Tailwind CSS",
  "main": "cli.js",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "tw-helper": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/cli.ts --minify",
    "lint": "eslint --config .eslintrc.json .",
    "format": "prettier --write .",
    "dev": "npm run build && dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "Tailwind",
    "Tailwind CSS"
  ],
  "author": "Antti Romppanen",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.5",
    "eslint": "^9.12.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.3",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "color": "^4.2.3",
    "commander": "^12.1.0"
  }
}
